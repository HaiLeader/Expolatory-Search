<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.MusicFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_search_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/_5sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/img_search_option"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_arrow_down"/>

                <EditText
                    android:id="@+id/edt_search"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_toRightOf="@+id/img_search_option"
                    android:layout_toLeftOf="@+id/img_search"
                    android:lines="1"
                    android:inputType="text"
                    android:imeOptions="actionDone"
                    android:textAppearance="@android:style/TextAppearance.Material.Body1"
                    android:hint="Search text"/>

                <ImageView
                    android:id="@+id/img_search"
                    android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:src="@drawable/btn_search" />

            </RelativeLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linear_result_option"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:visibility="gone">

            <Button
                android:id="@+id/btn_type"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Type"/>

            <Button
                android:id="@+id/btn_attribute"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Attribute"/>

            <Button
                android:id="@+id/btn_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Value"/>

            <Button
                android:id="@+id/btn_distinct"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Distinct"/>

        </LinearLayout>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>
