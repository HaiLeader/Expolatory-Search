<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/linear_top_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_top_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_label"
            android:paddingLeft="@dimen/title_text_padding_left"
            android:paddingTop="@dimen/title_text_padding"
            android:paddingBottom="@dimen/title_text_padding"
            android:textColor="@color/titleText"
            android:background="@color/backgroundTextLabel"
            android:text="@string/top_result_label"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/top_result_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linear_recommend_result"
        android:layout_below="@id/linear_top_result"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/text_recommend_label"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="@dimen/title_text_label"
            android:paddingLeft="@dimen/title_text_padding_left"
            android:paddingTop="@dimen/title_text_padding"
            android:paddingBottom="@dimen/title_text_padding"
            android:textColor="@color/titleText"
            android:background="@color/backgroundTextLabel"
            android:text="@string/recommend_result_label"/>

        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommend_result_recycler"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</RelativeLayout>